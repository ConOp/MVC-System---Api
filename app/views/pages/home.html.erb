<!DOCTYPE html>
<html>
<head>

</head>
<body>
<div class="container text-center">
  <h1>Hello I am the homepage</h1>
</div>
<div id="users">
<% for user in User.all %>
  <div class="user">
    <p>
      <strong><%=h user.email %></strong>
      <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
      <div class="clear"></div>
    </p>
  </div>
<% end %>
</div>

<div>
<%= link_to "Create Post", new_post_path %>
</div>

<div id="main-content" class="col-sm-9">
  <% if defined?(@searchposts)%>
  <h1>HELLO</h1>
  <%= puts "FOUND" %>
  <%= render @searchposts %>
  <%else%>
  <h1>HELLO2</h1>
  <%= puts "NOT FOUND" %>
  <%= render @posts %>
<%end%>
</div>

<div class="row">
  <%= render  'posts/search/search_form' %>
</div>
</body>
</html>
