<%= form_for(@post) do |f| %>
  <%= f.label :title %>
  <%= f.text_field  :title,
                    maxlength: 100,
                    placeholder: 'Title',
                    class: 'form-control',
                    required: true,
                    minlength: 5%>
    <%= f.label 'Description' %>
    <%= f.text_area :content,
                  rows: 6,
                  required: true,
                  minlength: 20,
                  maxlength: 1000,
                  placeholder: 'Describe what you are looking for. E.g. specific interests, expertise level, etc.',
                  class: 'form-control' %>
<%= f.label 'Category' %>
<%= f.text_field :category, class: 'form-control'%><br>
  <%= f.submit "Create a post", class: 'form-control' %>
<% end %>
