<div id="single-post-content" class="container">
    <div class ="d-flex justify-content-center">
    <div class="col-sm-6 col-sm-offset-3"  style="text-align: center;">
        <h3><%= @post.title %></h3><br>
        <p><%= @post.content %></p>
        <div class="contact-user">
          <%= render leave_message_partial_path %>
        </div>
      </div>
    </div>

</div>
<div class="row">
  <div class="col-md-9">
    <ul id="conversations-list">
      <% @conversations.each do |conversation| %>
        <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
      <% end %>
    </ul>
  </div>

  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">User list</h3>
      </div>
      <div class="panel-body">
        <ul style="padding-left: 0px; list-style: none;">
          <% @users.each do |user| %>
            <li><%= link_to user.email, conversations_path(user_id: user), remote: true, method: :post %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
