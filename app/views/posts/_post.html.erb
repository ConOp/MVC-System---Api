<div class="col-sm-3 single-post-card" id=<%= post_path(post.id) %>>
  <div class="card">
    <div class="card-block">
      <h3 class="post-text">
        <%= truncate(post.category, :length => 60) %>
      </h4>
      <div class="post-content">

        <h4><%= post.title %></h3>
        <p><%= post.content %></p>
        <%=link_to "I'm Interested", interests_create_path(:post=> post.id,:userid=>current_user.user_ID),method: :post%>
        <%= link_to "Show more ...", post_path(post.id), class: 'show' %>
      </div>
    </div>
  </div>
</div>
