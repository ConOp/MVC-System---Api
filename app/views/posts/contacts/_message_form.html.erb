<div class="card" style="width: 40rem;">
  <div class="card-body">
    <%= form_tag({controller: "conversations", action: "create"}, method: "post", remote: true) do %>
      <%= hidden_field_tag(:post_id, @post.id)  %>
      <%= text_area_tag(:message_body, nil, rows: 3, class: 'form-control', placeholder: 'Send a messsage to the user') %>
      <br><%= submit_tag('Send a message', class: 'btn btn-secondary') %>
    <% end %>
  </div>
</div>
